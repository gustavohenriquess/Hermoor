{
  "name": "hermoor",
  "version": "1.0.0",
  "main": "server.ts",
  "repository": "https://github.com/gustavohenriquess/Hermoor.git",
  "author": "Gustavo Henrique <gustavo._henrique@hotmail.com>",
  "license": "MIT",
  "dependencies": {
    "@types/moment": "^2.13.0",
    "commitizen": "^4.2.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "moment": "^2.29.1",
    "typescript": "^4.5.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@babel/preset-typescript": "^7.16.5",
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8"
  },
  "scripts": {
    "build": "tsc",
    "lint": "npx eslint --ext .ts,.js",
    "eslint:fix": "npx eslint . --ext .ts --fix",
    "test": "jest --coverage",
    "dev": "tsnd -r dotenv/config --inspect --ignore-watch node_modules src/infra/http/server.ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testResultsProcessor": "jest-sonar-reporter",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
